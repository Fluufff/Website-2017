	<script type="text/javascript">
		function toggleNoScript() {
			$(".script").removeClass("script");
			$(".noscript").addClass("invisible");
			$(".noscript-href").removeAttr("href");
			$(".noscript-href").each(function(index, e) {
				$(e).attr("href", $(e).attr("data-href"));
			});
		}

		$(function() {
			$("[data-xtype=date]").datepicker();
			$("[data-xtype=date]").datepicker("option", "dateFormat", "yy-mm-dd");
			$("[data-xtype=date]").datepicker("option", "changeYear", true);

			if($("[data-xtype=date]").length > 0){
				var date = $("[data-xtype=date]").attr("value").split("-");
				// Javascript brain-dead news: month is 0-based, the rest not... yay!
				$("[data-xtype=date]").datepicker("setDate", new Date(date[0], date[1] - 1, date[2]))
			}
			$(".ui-datepicker").hide();
		});
	</script>
